<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- 왼쪽 화살표 -->
        <TextView
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:text="&lt;"
            android:textColor="#4F7DF9"
            android:textSize="24sp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true" />

        <!-- 중앙 타이틀 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="출결 입력"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- 타이틀 가운데 맞춤 -->
        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- 첫번째 강의  -->
    <TextView
        android:id="@+id/lecture1TitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- 강의 출결 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal">

        <!-- 1교시 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1교시" />

            <Spinner
                android:id="@+id/spinner_0_0"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:padding="12dp" />
        </LinearLayout>

        <!-- 2교시 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2교시" />

            <Spinner
                android:id="@+id/spinner_0_1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:padding="12dp" />
        </LinearLayout>

        <!-- 3교시 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3교시" />

            <Spinner
                android:id="@+id/spinner_0_2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 두번째 강의 -->
    <TextView
        android:id="@+id/lecture2TitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp" />

    <!-- 강의 출결 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal">

        <!-- 1교시 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1교시" />

            <Spinner
                android:id="@+id/spinner_1_0"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:padding="12dp" />
        </LinearLayout>

        <!-- 2교시 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2교시" />

            <Spinner
                android:id="@+id/spinner_1_1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:padding="12dp" />
        </LinearLayout>

        <!-- 3교시 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3교시" />

            <Spinner
                android:id="@+id/spinner_1_2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- 확인 버튼 -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textColor="#FFFFFF"
        android:backgroundTint="#9099B8"
        android:layout_gravity="end"
        android:layout_marginTop="32dp" />

</LinearLayout>
